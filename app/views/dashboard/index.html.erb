<h1>Hello <%= @user.first_name %>!</h1>

<div class="cameras-container">
  <h1>My Cameras</h1>
  <ul class="cameras-cards cameras-box">
    <% @cameras.each do |camera| %>
      <li>
        <img src="<%= camera.picture_url %>" alt="">
        <div class="cameras-info">
          <%= link_to camera.name, camera_path(camera), class:"cameras-name"%>
          <%= link_to camera.price, camera_path("#"), class:"cameras-price"%>â‚¬ <br>
        </div>
        <div class="card-body">
          <%= link_to "Edit", edit_camera_path(camera), class: 'btn btn-primary' %>
          <%= link_to "Delete", camera_path(camera), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-warning' %>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<div class="row">
  <div class="col-sm-6">
    <div class="bookings-container card">
      <div class="card-header">
        <h1>My Bookings</h1>
      </div>
      <div class="card-body">
        <% @bookings.each do |booking| %>
          <h5 class="card-title">Booking reference number: <%= booking.id %></h5>
          <p class="card-text">Camera: <%= booking.camera.name %></p>
          <p class="card-text">Owner: <%= booking.user.first_name %> <%= booking.user.last_name %></p>
          <p class="card-text">From: <%= booking.start_date %></p>
          <p class="card-text">To: <%= booking.finish_date %></p>
        <% end %>
      </div>
   </div>
  </div>
  
  <div class="col-sm-6">
    <div class="bookings-container card">
      <div class="card-header">
        <h1>My Booked Cameras</h1>
      </div>
      <div class="card-body">
        <% @bookings_as_owner.each do |booking| %>
          <h5 class="card-title">Booking reference number: <%= booking.id %></h5>
          <p class="card-text">Camera: <%= booking.camera.name %></p>
          <p class="card-text">User: <%= booking.user.first_name %> <%= booking.user.last_name %></p>
          <p class="card-text">From: <%= booking.start_date %></p>
          <p class="card-text">To: <%= booking.finish_date %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
