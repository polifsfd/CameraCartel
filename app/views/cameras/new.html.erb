<%= simple_form_for @camera do |f| %>
  <%= f.input :name %>
  <%= f.input :details %>
  <%= f.input :category, collection: Camera::CATEGORIES %>
  <%= f.input :price %>
  <%= f.input :year %>
  <%= f.input :model %>
  <%= f.input :photo, as: :file%>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
<br>
<%= link_to "Go back to overview", cameras_path, class: 'btn btn-primary' %>
