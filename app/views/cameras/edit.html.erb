<h1>Edit Camera</h1>

<%= form_for @camera do |f| %>
  <div>
    <%= f.text_field :name %><br>
    <%= f.text_area :details %><br>
    <%= f.text_field :year %><br>
    <%= f.text_area :model %><br>
    <%= f.text_area :category %><br>
    <%= f.text_field :price %>
  </div>

  <div>
    <%= f.submit "Update Camera" %>

    <%= link_to "Delete", camera_path(@camera), data: {turbo_method: :delete, turbo_confirm: "Delete #{@camera.name}?"} %>
  </div>
<% end %>
