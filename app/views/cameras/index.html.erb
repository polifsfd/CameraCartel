            <p><%= link_to camera.name, camera_path(camera), class:"cameras-name"%> - <strong><%= camera.model %></strong></p>
          </div>
          <div>
            <%= camera.price %>â‚¬
          </div>
        </li>
      <% end %>
    </ul>
  </div>
